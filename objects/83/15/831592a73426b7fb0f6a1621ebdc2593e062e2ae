    I:"Power Piston Strength"=24
}


resistor {
    #  [range: 2 ~ 15, default: 4]
    I:Resistance=4
}


"signal extender" {
    #  [range: 2 ~ 10, default: 4]
    I:"signal length multiplier"=4
}


wireless {
    #  [range: 1.0 ~ 30.0, default: 15.0]
    S:Range=15.0

    # the number of channels available via R click [range: 1 ~ 4, default: 3]
    I:"Survival Channels"=3
}


